

# obs dataframe
#row
#create a column to calculate NA values in each rows
obs$NAs <- rowSums(is.na(obs))
obs_witoutNAs <- obs[((obs$NAs)>length(colnames(obs))-1),]       #-1 for the new NAs column we created

#col
x <- length(obs$NAs) #or any other column
obs_withoutNAs <- obs[,(colSums(is.na(obs))=x)]
